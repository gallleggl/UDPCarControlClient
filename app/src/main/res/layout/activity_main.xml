<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/turningSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:max="10"
        android:progress="5" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accelerationSeekBar"
        android:layout_below="@id/turningSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="10"
        android:progress="0"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="356dp"
        android:layout_height="218dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:contentDescription="@null"
        app:srcCompat="?android:attr/actionModeBackground" />

    <EditText
        android:id="@+id/controlPassword"
        android:layout_width="114dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:ems="10"
        android:hint="@string/pass1"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/turningSeekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-256dp"
        android:text="Steering" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turningSeekBar"
        android:layout_centerHorizontal="true"
        android:text="Speed" />

    <EditText
        android:id="@+id/imagePassword"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="@string/pass2"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/type"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controlPassword"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/imageType" />


</RelativeLayout>